<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MCategoriasAlimentos.AlimentosCategorias"
    android:background="@drawable/bg2">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_atras"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:onClick="flechaHome"/>


    <!-- Logo principal -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/categorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="CATEGORIAS"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:background="@drawable/card_mensajes"
        />

    <!-- Botones de hamburguesa y café -->
    <LinearLayout
        android:id="@+id/layout_botones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/categorias"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:paddingTop="24dp">

        <ImageButton
            android:id="@+id/btn_hamburguesa"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_hamburguesa"
            android:background="@drawable/bg_comida"
            android:onClick="abrirAlimentosMenu"
            android:layout_marginEnd="16dp"
            android:contentDescription="Botón Next view:scrollAlimentos"/>



        <ImageButton
            android:id="@+id/btn_cafe"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_cafe"
            android:onClick="abrirBebidasCategorias"
            android:background="@drawable/bg_bebidas"
            android:contentDescription="Botón NextView:ScrollBebidas"/>



    </LinearLayout>

    <!-- Título sugerencias -->
    <TextView
        android:id="@+id/tv_sugerencias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_botones"
        android:layout_alignParentStart="true"
        android:layout_margin="25dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"

        android:text="Sugerencias"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <!-- Scroll horizontal para sugerencias -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSugerencias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_sugerencias"
        android:layout_marginTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomNV2"
        android:layout_alignParentBottom="true"
        android:background="@drawable/barra_menu"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        app:menu="@menu/menu_second_bottom"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:itemIconSize="30dp"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"/>


</RelativeLayout>

